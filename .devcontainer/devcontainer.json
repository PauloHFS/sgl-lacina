{
	"name": "SGL-Lacina-Devcontainer",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "app",
	"workspaceFolder": "/var/www/html",
	"remoteUser": "sail",
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"xdebug.php-debug",
				"onecentlin.laravel-blade",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"formulahendry.auto-complete-tag",
				"naumovs.color-highlight",
				"eamodio.gitlens",
				"Gruntfuggly.todo-tree",
				"bradlc.vscode-tailwindcss",
				"amiralizadeh9480.laravel-extra-intellisense",
				"ryannaddy.laravel-artisan",
				"laravel.vscode-laravel",
				"damms005.devdb"
			],
			"settings": {
				"php.validate.executablePath": "/usr/bin/php",
				"php.debug.idekey": "VSCODE",
				"intelephense.environment.phpVersion": "8.4"
			}
		}
	},
	"postCreateCommand": "chown -R 1000:1000 /var/www/html 2>/dev/null || true && composer install && npm install",
	"forwardPorts": [
		80,
		5173,
		5432,
		1025,
		8025,
		6379,
		7700,
		8080
	],
	"portsAttributes": {
		"80": {
			"label": "Laravel App",
			"onAutoForward": "notify"
		},
		"5173": {
			"label": "Vite Dev Server",
			"onAutoForward": "notify"
		},
		"5432": {
			"label": "PostgreSQL Database",
			"onAutoForward": "silent"
		},
		"1025": {
			"label": "Mailpit SMTP",
			"onAutoForward": "silent"
		},
		"8025": {
			"label": "Mailpit Dashboard",
			"onAutoForward": "openBrowser"
		},
		"6379": {
			"label": "Redis",
			"onAutoForward": "silent"
		},
		"7700": {
			"label": "Meilisearch",
			"onAutoForward": "openBrowser"
		},
		"8080": {
			"label": "Adminer Database Manager",
			"onAutoForward": "openBrowser"
		}
	},
	"shutdownAction": "none"
}